{
  "name": "event-worker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
   "build": "esbuild src/**/*.ts --outbase=src --outdir=dist --format=esm --platform=node  --sourcemap --minify",
   "build:dev": "esbuild src/index.ts --outdir=dist --format=esm --platform=node --target=node18 --sourcemap",
   "build:watch": "esbuild src/index.ts --outdir=dist --format=esm --platform=node --target=node18 --sourcemap --watch",
   "dev": "esbuild src/**/*.ts --outbase=src --outdir=dist --format=esm --platform=node --target=node18 --sourcemap  --watch && node dist/app.js",
   "start": "node dist/app.js",
    "clean": "rm -rf dist"
  },
