    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bullmq": "^5.58.7",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "morgan": "^1.10.1",
    "tsc-watch": "^7.1.1"
  }
